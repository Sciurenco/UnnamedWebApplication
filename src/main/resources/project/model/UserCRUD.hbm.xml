<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping xmlns="http://www.hibernate.org/xsd/hibernate-mapping">

    <class name="project.model.UserModel" table="user">
        <id name="userLogin" column="login"/>
        <property name="userPassword" column="password"/>
        <property name="userSurname" column="surname"/>
        <property name="userName" column="name"/>
        <property name="userCountry" column="country"/>
        <property name="userCity" column="city"/>

    </class>
</hibernate-mapping>